<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/fondo"
    tools:context="com.example.jairignaciogg.sistemaupt.Menu">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/imageView"
        android:layout_marginTop="0dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/banner" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido!!! "
        android:id="@+id/textView"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Por favor selecciona un módulo para acceder"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp" />

    <Button
        android:layout_width="130dp"
        android:layout_height="75dp"
        android:text="Coordinador Institucional de Tutorías"
        android:id="@+id/btnInstitucional"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@id/imageView"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:theme="@style/AppTheme"
        />

    <Button
        android:layout_width="130dp"
        android:layout_height="75dp"
        android:text="Coordinador del Programa Educativo"
        android:id="@+id/btnCoordi"
        android:layout_alignBottom="@+id/btnInstitucional"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        android:theme="@style/AppTheme"/>

    <Button
        android:layout_width="130dp"
        android:layout_height="75dp"
        android:text="Tutor"
        android:id="@+id/btnTutor"
        android:theme="@style/AppTheme"
        android:layout_alignTop="@+id/btnEstudiante"
        android:layout_alignLeft="@+id/btnCoordi"
        android:layout_alignStart="@+id/btnCoordi" />

    <Button
        android:layout_width="130dp"
        android:layout_height="75dp"
        android:text="Estudiante"
        android:id="@+id/btnEstudiante"
        android:layout_marginTop="25dp"
        android:theme="@style/AppTheme"
        android:layout_below="@+id/btnInstitucional"
        android:layout_alignLeft="@+id/btnInstitucional"
        android:layout_alignStart="@+id/btnInstitucional" />

    <Button
        android:layout_width="130dp"
        android:layout_height="75dp"
        android:text="Contacto"
        android:id="@+id/btnContacto"
        android:theme="@style/AppTheme"
        android:layout_below="@+id/btnTutor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"/>

</RelativeLayout>
